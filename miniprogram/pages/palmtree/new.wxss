.page { padding-bottom: 58px; color: #fff; }
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: rgba(0,0,0,0.3); }
.nav-left { width: 44px; color: #ffffff; font-size: 18px; }
.nav-title { flex: 1; text-align: center; color: #FFFFFF; font-size: 17px; font-weight: 500; }

.intro { margin: 16px; padding: 16px; border-radius: 12px; background: rgba(255,255,255,0.04); box-shadow: 0 2px 8px rgba(0,0,0,0.1); display: flex; }
.intro-icon { margin-right: 8px; }
.intro-title { font-size: 18px; color: #E6E6E6; font-weight: 600; }
.intro-sub { font-size: 14px; color: #A0A0A0; line-height: 20px; }

.section { margin: 16px; padding: 16px; border-radius: 12px; background: rgba(255,255,255,0.03); box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
.section-title { font-size: 16px; margin-bottom: 12px; color: #E6E6E6; }

.form-field { margin-bottom: 12px; }
.input { height: 52px; border-radius: 12px; border: 1px solid rgba(255,255,255,0.2); padding: 0 16px; color: #fff; }
.input.required { border-color: #3A9E8F; }
.input:focus { border-color: #3A9E8F; }

.form-row { display: flex; gap: 12px; align-items: center; }
.picker { min-width: 88px; height: 40px; border: 1px solid rgba(255,255,255,0.2); border-radius: 10px; display: flex; align-items: center; justify-content: center; color: #fff; }
.calendar-toggle { margin-left: auto; display: flex; align-items: center; gap: 6px; color: #BBBBBB; }
.hint { margin-top: 8px; font-size: 12px; color: #BBBBBB; }

.radio-group { display: flex; gap: 16px; }
.radio { color: #fff; }
.switch-row { margin-top: 12px; display: flex; align-items: center; justify-content: space-between; }

.locate { border: 1px solid #3A9E8F; color: #3A9E8F; background: transparent; height: 40px; border-radius: 10px; padding: 0 12px; }

.bottom-bar { position: fixed; left: 0; right: 0; bottom: 0; height: 60px; }
.submit { width: 100%; height: 60px; background: #3A9E8F; color: #fff; font-size: 16px; font-weight: 600; border-radius: 0; }
.submit:active { transform: scale(0.98); }

.tabbar-placeholder { height: 58px; }
