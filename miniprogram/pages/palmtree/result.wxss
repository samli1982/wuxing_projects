.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }
.page { padding-bottom: 72px; color: #333333; }
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: #F0F0F0; }
.nav-left { width: 44px; color: #333333; font-size: 18px; }
.nav-title { flex: 1; text-align: center; color: #333333; font-size: 17px; font-weight: 500; }
.nav-right { width: 44px; text-align: right; color: #333333; font-size: 16px; background: transparent; }

.user-selector { white-space: nowrap; padding: 12px 16px; }
.user-item { display: inline-block; margin-right: 12px; text-align: center; }
.user-item .avatar { width: 48px; height: 48px; border-radius: 24px; display: flex; align-items: center; justify-content: center; color: #fff; font-size: 18px; font-weight: 600; }
.user-item.active .avatar { border: 3px solid #07c160; }
.user-item .year { font-size: 12px; color: #999999; margin-top: 4px; }
.user-item.add .avatar { background: rgba(255,255,255,0.2); border: 1px dashed #999999; }
.user-item.add .avatar text { color: #999999; }

.ident { margin: 16px; padding: 16px; border-radius: 12px; background: rgba(255, 255, 255, 0.06); backdrop-filter: blur(10px); border: 1px solid rgba(58, 158, 143, 0.15); box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); }
.nick { font-size: 18px; color: #333333; font-weight: 600; margin-bottom: 6px; }
.birth { font-size: 14px; color: #999999; }

.card { margin: 16px; padding: 16px; border-radius: 16px; background: rgba(255, 255, 255, 0.06); border: 1px solid rgba(58, 158, 143, 0.15); box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); }
.bazi-header { font-size: 16px; margin-bottom: 12px; color: #333333; }
.grid { display: grid; grid-template-columns: repeat(4, 1fr); grid-gap: 8px; }
.cell { height: 60px; border: 1px solid rgba(255,255,255,0.2); border-radius: 8px; display: flex; align-items: center; justify-content: center; font-family: "Courier New", monospace; }
.cell.highlight { border-color: #07c160; box-shadow: 0 0 0 2px rgba(58,158,143,0.5) inset; }
.note { margin-top: 8px; font-size: 12px; color: #999999; }

.section-title { font-size: 16px; color: #333333; margin-bottom: 8px; }
.bar { position: relative; height: 28px; background: rgba(255,255,255,0.08); border-radius: 8px; margin-bottom: 8px; overflow: hidden; }
.bar-fill { height: 100%; border-radius: 8px; }
.bar-label { position: absolute; left: 8px; top: 4px; font-size: 13px; color: #fff; }
.wood { background: #07c160; }
.fire { background: #FF5E5E; }
.earth { background: #FFC100; }
.metal { background: #FFFFFF; }
.water { background: #4A90E2; }

.useful-gods { margin-top: 12px; padding: 10px; border-radius: 8px; background: rgba(69,123,157,0.1); display: flex; align-items: center; flex-wrap: wrap; }
.gods-title { font-size: 14px; color: #333333; margin-right: 8px; }
.god-tag { padding: 2px 8px; border-radius: 6px; background: #4A90E2; color: #fff; font-size: 12px; margin-right: 6px; }
.hint { font-size: 14px; color: #07c160; text-decoration: underline; margin-left: 4px; }

.wuyun .wuyun-row { display: flex; gap: 8px; margin-bottom: 8px; }
.wuyun-tag { padding: 4px 10px; border-radius: 6px; font-size: 13px; color: #fff; }
.wuyun-tag.gold { background: #FFFFFF; color: #333; }
.wuyun-tag.fire { background: #FF5E5E; }
.wuyun-tag.metal { background: #999; }
.wuyun-climate { font-size: 13px; color: #999999; margin-bottom: 8px; }
.wuyun-warnings .warn-title { font-size: 13px; color: #333333; margin-bottom: 4px; }
.warn-item { font-size: 13px; color: #999999; margin-bottom: 2px; }

.constitution .ctype { font-size: 16px; color: #333333; margin-bottom: 8px; }
.tags { display: flex; gap: 8px; margin-bottom: 8px; }
.tag { padding: 4px 10px; border-radius: 999px; font-size: 12px; }
.tag.hot { background: #FF5E5E; color: #fff; }
.tag.bright { background: #07c160; color: #fff; }
.desc { font-size: 14px; color: #999999; margin-top: 4px; }

.tabs { display: flex; gap: 8px; margin-bottom: 8px; }
.tab { padding: 6px 10px; border-radius: 999px; background: rgba(255,255,255,0.08); color: #fff; font-size: 13px; }
.tab.active { background: #07c160; }
.tip-item { display: flex; align-items: center; margin-bottom: 8px; }
.dot { width: 6px; height: 6px; border-radius: 3px; background: #A8DADC; margin-right: 8px; }
.tip-text { font-size: 14px; color: #A8DADC; }

.bottom-actions { display: flex; gap: 8px; padding: 0 16px; margin: 16px 0; }
.btn { flex: 1; height: 52px; border-radius: 12px; display: flex; align-items: center; justify-content: center; font-weight: 600; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
.btn:active { transform: scale(0.98); }
.btn.save { background: #07c160; color: #fff; box-shadow: 0 2px 8px rgba(58, 158, 143, 0.2); }
.btn.share { background: #4A90E2; color: #fff; }
.btn.detail { border: 1px solid #333333; color: #333333; background: transparent; }
