.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }
.loading-page { height: 100vh; background-image: linear-gradient(180deg, #F5F5F5 0%, #16213E 100%); color: #fff; position: relative; }
.center { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -60%); display: flex; flex-direction: column; align-items: center; }
.taiji { width: 120px; height: 120px; border-radius: 60px; border: 2px solid rgba(255,255,255,0.5); position: relative; animation: spin 3s linear infinite; }
.yin, .yang { position: absolute; width: 60px; height: 60px; border-radius: 30px; }
.yin { top: 0; left: 30px; background: radial-gradient(circle at 50% 30%, rgba(255,255,255,0.8), #F0F0F0); }
.yang { bottom: 0; left: 30px; background: radial-gradient(circle at 50% 70%, rgba(255,255,255,0.2), rgba(255,255,255,0.8)); }
.texts { margin-top: 24px; text-align: center; }
.main { font-size: 16px; font-weight: 600; color: #E6E6E6; }
.sub { font-size: 14px; color: #A0A0A0; line-height: 20px; }
.decor { position: absolute; bottom: 40px; left: 50%; transform: translateX(-50%); width: 70%; }
.line { height: 1px; background: #F0F0F0; }
.dot { width: 6px; height: 6px; border-radius: 3px; background: rgba(255,255,255,0.15); position: absolute; top: -3px; }
.left { left: 0; }
.right { right: 0; }
@keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
