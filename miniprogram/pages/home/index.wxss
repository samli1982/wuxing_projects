/* 页面背景采用深灰蓝渐变 */
.page { min-height: 100vh; background-image: linear-gradient(180deg, #F5F5F5 0%, #FFFFFF 100%); }
.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }

/* 日出 | 农历 | 节气 | 北斗 自动循环滚动 */
.scrolling-banner {
  width: 100%;
  height: 40px;
  overflow: hidden;
  background: #F0F0F0;
  display: flex;
  align-items: center;
  padding: 20px px;
  margin-top: 40px;
  position: relative;
  z-index: 1;
}
.scrolling-content {
  display: flex;
  align-items: center;
  gap: 0;
  white-space: nowrap;
  animation: scroll-left linear infinite;
}
@keyframes scroll-left {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(-50%);
  }
}
.banner-item {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 0 8px;
}
.banner-icon {
  font-size: 14px;
  margin-right: 4px;
}
.banner-text {
  font-size: 13px;
  color: #666666;
  white-space: nowrap;
}
.banner-separator {
  font-size: 12px;
  color: #CCCCCC;
  padding: 0 4px;
}

/* 公历、干支历、干支纪年历卡片 */
.calendar-card {
  margin: 16px;
  padding: 0;
  border-radius: 16px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);
  background: #FFFFFF;
  position: relative;
  overflow: hidden;
}
.calendar-row {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px 16px;
  gap: 8px;
}
.calendar-row:active {
  opacity: 0.8;
}
.divider-row {
  padding: 0;
  min-height: 1px;
  background: #F0F0F0;
}
.calendar-divider {
  width: 100%;
  height: 1px;
  background: #F0F0F0;
}
.calendar-value {
  font-size: 16px;
  color: #333333;
  font-weight: 500;
  font-family: 'Monaco', 'Courier New', monospace;
}
.calendar-arrow {
  font-size: 14px;
  color: #07c160;
  margin-left: 4px;
}
.emperor-text {
  color: #07c160 !important;
}

.header { height: 80px; padding: 12px 16px; white-space: nowrap; }
.header-item { display: inline-flex; align-items: center; margin-right: 12px; }
.icon { margin-right: 6px; }
.header-text { font-size: 14px; color: #333333; }
.lunar { font-size: 14px; color: #333333; }
.tag { display: inline-block; padding: 4px 10px; border-radius: 999px; background: #FF5E5E; color: #fff; font-size: 12px; }
.beidou { font-size: 12px; color: #999999; font-style: italic; }
.divider { display: inline-block; width: 1px; height: 20px; background: #E8E8E8; margin: 0 8px; }

.card { margin: 16px; padding: 16px; border-radius: 16px; box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06); background: #FFFFFF; position: relative; overflow: hidden; }
.card-year { text-align: center; color: #333333; font-size: 20px; font-weight: 600; }
.card-year .nayin { display: block; margin-top: 4px; font-size: 14px; font-weight: 400; }

.card-core { display: flex; align-items: center; margin-top: 16px; }
.taichi { width: 64px; height: 64px; border-radius: 32px; border: 1px solid #E8E8E8; display: flex; align-items: center; justify-content: center; margin-right: 12px; }
.labels { flex: 1; }
.label { margin-bottom: 8px; }
.label-title { color: #07c160; font-size: 14px; }
.label-value { color: #333333; font-size: 14px; }
.flow { color: #07c160; font-size: 12px; }

.tips { margin-top: 12px; }
.tips-label { color: #07c160; font-size: 13px; font-weight: 500; margin-bottom: 8px; }
.tip-item { display: flex; align-items: center; margin-bottom: 8px; }
.dot { width: 6px; height: 6px; border-radius: 3px; background: #07c160; margin-right: 8px; }
.tip-text { font-size: 14px; color: #666666; }
.more { margin-top: 4px; }

.climate-section { margin-top: 12px; }
.section-label { color: #07c160; font-size: 13px; font-weight: 500; margin-bottom: 6px; }
.climate-text { font-size: 13px; color: #666666; line-height: 1.6; }

.link-area { margin-top: 12px; }
.link { color: #07c160; font-size: 13px; }

.actions { display: flex; gap: 12px; padding: 0 16px; margin-top: 16px; }
.btn { flex: 1; height: 60px; border-radius: 12px; display: flex; align-items: center; justify-content: center; }
.primary { background: #07c160; color: #fff; }
.secondary { border: 1px solid #E8E8E8; color: #333333; background: transparent; }
.btn-icon { margin-right: 6px; }
.btn-text { font-size: 16px; }

.health-banner { display: flex; align-items: center; gap: 8px; margin: 8px 16px; padding: 10px 12px; border-radius: 12px; background: #E8F5E9; border: 1px solid #07c160; }
.health-text { font-size: 14px; color: #333333; flex: 1; }
.close { color: #999999; font-size: 18px; }

.tabbar-placeholder { height: 58px; }
