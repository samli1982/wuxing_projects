<view class="page">
  <view class="status-bar"></view>
  <!-- 导航栏 -->
  <view class="nav">
    <view class="nav-left" bindtap="onBack">←</view>
    <view class="nav-title">个人资料</view>
    <view class="nav-right"></view>
  </view>

  <!-- 个人资料编辑区 -->
  <view class="edit-section">
    <view class="edit-item">
      <view class="label">昵称</view>
      <input class="input" placeholder="请输入昵称" value="{{userInfo.nickname}}" bindchange="onNicknameChange" />
    </view>

    <view class="edit-item">
      <view class="label">头像颜色</view>
      <view class="color-picker">
        <view class="color-box {{userInfo.avatar_color === '#E63946' ? 'active' : ''}}" style="background-color: #E63946;" bindtap="onColorSelect" data-color="#E63946"></view>
        <view class="color-box {{userInfo.avatar_color === '#3A9E8F' ? 'active' : ''}}" style="background-color: #3A9E8F;" bindtap="onColorSelect" data-color="#3A9E8F"></view>
        <view class="color-box {{userInfo.avatar_color === '#F4D06F' ? 'active' : ''}}" style="background-color: #F4D06F;" bindtap="onColorSelect" data-color="#F4D06F"></view>
        <view class="color-box {{userInfo.avatar_color === '#457B9D' ? 'active' : ''}}" style="background-color: #457B9D;" bindtap="onColorSelect" data-color="#457B9D"></view>
      </view>
    </view>
  </view>

  <!-- 保存按钮 -->
  <view class="action-area">
    <view class="button primary" bindtap="onSave">保存修改</view>
  </view>
</view>
