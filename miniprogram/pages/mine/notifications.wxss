.page { background: #1A1C29; color: #fff; padding-bottom: 20px; }

/* 导航栏 */
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: rgba(0,0,0,0.3); }
.nav-left { width: 44px; font-size: 18px; }
.nav-title { flex: 1; text-align: center; font-size: 17px; font-weight: 600; }
.nav-right { width: 44px; }

/* 设置列表 */
.settings-list { padding: 12px 0; }
.settings-item { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
  height: 60px;
  padding: 0 16px;
  border-bottom: 1px solid rgba(255,255,255,0.05);
}

.settings-label { flex: 1; }
.settings-name { 
  display: block;
  font-size: 14px; 
  color: #FFFFFF; 
  font-weight: 600;
  margin-bottom: 4px;
}
.settings-desc { 
  display: block;
  font-size: 12px; 
  color: #BBBBBB;
}

/* 切换开关 */
.toggle { 
  width: 44px; 
  height: 24px; 
  border-radius: 12px; 
  background: rgba(255,255,255,0.1);
  position: relative;
  transition: all 0.3s;
}
.toggle::after { 
  content: ''; 
  position: absolute; 
  width: 20px; 
  height: 20px; 
  border-radius: 10px; 
  background: #fff; 
  left: 2px; 
  top: 2px;
  transition: all 0.3s;
}
.toggle.on { background: #3A9E8F; }
.toggle.on::after { left: 22px; }
