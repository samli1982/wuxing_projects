.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }
.page { background: #F5F5F5; color: #333333; padding-bottom: 20px; }

/* 导航栏 */
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: #F0F0F0; }
.nav-left { width: 44px; font-size: 18px; }
.nav-title { flex: 1; text-align: center; font-size: 17px; font-weight: 600; }
.nav-right { width: 44px; }

/* 分区 */
.section { padding: 16px; border-bottom: 1px solid rgba(255,255,255,0.05); }
.section-title { 
  font-size: 13px; 
  color: #999999; 
  text-transform: uppercase; 
  margin-bottom: 12px;
}

/* 备份项 */
.backup-item { 
  display: flex; 
  align-items: center; 
  justify-content: space-between;
  padding: 12px;
  background: rgba(255,255,255,0.05);
  border-radius: 8px;
  margin-bottom: 8px;
}

.backup-info { flex: 1; }
.backup-name { 
  font-size: 14px; 
  color: #333333; 
  font-weight: 600;
  margin-bottom: 4px;
}
.backup-desc { 
  font-size: 12px; 
  color: #999999;
}

/* 按钮 */
.button { 
  padding: 8px 16px;
  background: #07c160;
  border-radius: 6px;
  color: #333333;
  font-size: 12px;
  font-weight: 600;
}
.button:active { opacity: 0.8; }
