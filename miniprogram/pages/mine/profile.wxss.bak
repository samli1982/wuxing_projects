.page { background: #1A1C29; color: #D1D5DB; padding-bottom: 20px; }

/* 导航栏 */
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: rgba(0,0,0,0.3); }
.nav-left { width: 44px; font-size: 18px; }
.nav-title { flex: 1; text-align: center; font-size: 17px; font-weight: 600; }
.nav-right { width: 44px; }

/* 编辑区 */
.edit-section { padding: 16px; }
.edit-item { margin-bottom: 20px; }
.label { font-size: 14px; color: #9CA3AF; margin-bottom: 8px; }
.input { 
  width: 100%;
  padding: 10px 12px;
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 8px;
  color: #D1D5DB;
  font-size: 14px;
}

/* 颜色选择器 */
.color-picker { display: flex; gap: 12px; }
.color-box { 
  width: 48px; 
  height: 48px; 
  border-radius: 24px; 
  border: 2px solid transparent;
  transition: all 0.3s;
}
.color-box.active { border-color: #3A9E8F; box-shadow: 0 0 0 2px rgba(58,158,143,0.3); }

/* 操作按钮 */
.action-area { padding: 16px; }
.button { 
  padding: 12px;
  text-align: center;
  border-radius: 8px;
  font-size: 15px;
  font-weight: 600;
  transition: all 0.3s;
}
.button.primary { 
  background: #3A9E8F;
  color: #D1D5DB;
}
.button.primary:active { transform: scale(0.98); opacity: 0.9; }
