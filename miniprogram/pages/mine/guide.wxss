.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }
.page { background: #F5F5F5; color: #333333; display: flex; flex-direction: column; height: 100vh; }

/* 导航栏 */
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: #F0F0F0; }
.nav-left { width: 44px; font-size: 18px; }
.nav-title { flex: 1; text-align: center; font-size: 17px; font-weight: 600; }
.nav-right { width: 44px; }

/* 内容区 */
.content { flex: 1; padding: 16px; }

/* 指南分区 */
.guide-section { margin-bottom: 24px; }
.guide-title { 
  font-size: 16px; 
  color: #333333; 
  font-weight: 600; 
  margin-bottom: 12px;
  padding-bottom: 8px;
  border-bottom: 2px solid rgba(58,158,143,0.3);
}

.guide-desc { 
  font-size: 13px; 
  color: #999999; 
  line-height: 1.8;
}

/* 指南项 */
.guide-item { 
  padding: 12px 0;
  border-bottom: 1px solid rgba(255,255,255,0.05);
}
.guide-item:last-child { border-bottom: none; }

.item-title { 
  font-size: 14px; 
  color: #07c160; 
  font-weight: 600;
  margin-bottom: 6px;
}
.item-desc { 
  font-size: 12px; 
  color: #999999; 
  line-height: 1.6;
}
