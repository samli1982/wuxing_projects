.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }
.page { background: #F5F5F5; color: #333333; padding-bottom: 20px; }

/* 导航栏 */
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: #F0F0F0; }
.nav-left { width: 44px; font-size: 18px; }
.nav-title { flex: 1; text-align: center; font-size: 17px; font-weight: 600; }
.nav-right { width: 44px; }

/* 表单 */
.form-section { padding: 16px; }
.form-item { margin-bottom: 20px; }
.label { font-size: 14px; color: #999999; margin-bottom: 8px; }

.picker { 
  padding: 10px 12px;
  background: #FFFFFF;
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 8px;
  color: #333333;
  font-size: 14px;
}

.textarea { 
  width: 100%;
  height: 120px;
  padding: 10px 12px;
  background: #FFFFFF;
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 8px;
  color: #333333;
  font-size: 14px;
  font-family: inherit;
}

.char-count { 
  font-size: 11px; 
  color: #999999; 
  text-align: right; 
  margin-top: 4px;
}

.input { 
  width: 100%;
  padding: 10px 12px;
  background: #FFFFFF;
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 8px;
  color: #333333;
  font-size: 14px;
}

/* 操作区 */
.action-area { padding: 16px; }
.button { 
  padding: 12px;
  text-align: center;
  border-radius: 8px;
  font-size: 15px;
  font-weight: 600;
  transition: all 0.3s;
}
.button.primary { 
  background: #07c160;
  color: #333333;
}
.button.primary:active { transform: scale(0.98); opacity: 0.9; }
.button:disabled { opacity: 0.5; }
