.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }
.page { background: #F5F5F5; color: #333333; padding-bottom: 20px; }

/* 导航栏 */
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: #F0F0F0; }
.nav-left { width: 44px; font-size: 18px; }
.nav-title { flex: 1; text-align: center; font-size: 17px; font-weight: 600; }
.nav-right { width: 44px; }

/* 编辑区 */
.edit-section { padding: 16px; }
.edit-item { margin-bottom: 20px; }
.label { font-size: 14px; color: #999999; margin-bottom: 8px; }
.input { 
  width: 100%;
  padding: 10px 12px;
  background: #FFFFFF;
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 8px;
  color: #333333;
  font-size: 14px;
}

/* 颜色选择器 */
.color-picker { display: flex; gap: 12px; }
.color-box { 
  width: 48px; 
  height: 48px; 
  border-radius: 24px; 
  border: 2px solid transparent;
  transition: all 0.3s;
}
.color-box.active { border-color: #07c160; box-shadow: 0 0 0 2px rgba(58,158,143,0.3); }

/* 操作按钮 */
.action-area { padding: 16px; }
.button { 
  padding: 12px;
  text-align: center;
  border-radius: 8px;
  font-size: 15px;
  font-weight: 600;
  transition: all 0.3s;
}
.button.primary { 
  background: #07c160;
  color: #333333;
}
.button.primary:active { transform: scale(0.98); opacity: 0.9; }
