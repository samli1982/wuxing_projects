.status-bar { width: 100%; background: #F5F5F5; height: auto; color: #333333; }
.page { padding-bottom: 58px; color: #333333; min-height: 100vh; background: #F5F5F5; }
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: #F0F0F0; border-bottom: 1px solid #E8E8E8; }
.nav-left { width: 44px; color: #333333; font-size: 18px; }
.nav-title { flex: 1; text-align: center; color: #333333; font-size: 17px; font-weight: 500; }
.nav-right { width: 44px; text-align: right; color: #333333; font-size: 16px; }

.motto { text-align: center; padding: 16px 20px 20px; }
.motto .line { display: block; font-family: "STKaiti", "Kaiti SC", serif; font-size: 16px; color: #333333; line-height: 28px; }
.motto .hint { margin-top: 8px; font-size: 13px; color: #07c160; text-decoration: underline; }

.filters { background: #FFFFFF; padding: 8px 0; position: sticky; top: 44px; z-index: 10; border-bottom: 1px solid #E8E8E8; }
.tab-parent { white-space: nowrap; padding: 0 16px; }
.tab { display: inline-block; padding: 8px 16px; font-size: 15px; font-weight: 600; color: #999999; }
.tab.active { color: #333333; border-bottom: 3px solid #07c160; }
.tab-child { white-space: nowrap; padding: 0 16px; margin-top: 8px; }
.tab-child-item { display: inline-block; padding: 6px 12px; margin-right: 8px; border-radius: 999px; background: #F0F0F0; font-size: 13px; color: #999999; }
.tab-child-item.active { background: #07c160; color: #fff; }

.list { margin: 12px 16px; }
.card { position: relative; margin-bottom: 12px; padding: 12px; border-radius: 16px; background: #FFFFFF; border: 1px solid #E8E8E8; box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06); }
.card:active { transform: scale(0.98); }
.collect { position: absolute; top: 8px; right: 8px; font-size: 18px; }
.card-header { display: flex; align-items: center; margin-bottom: 6px; }
.number { font-size: 12px; color: #999999; margin-right: 6px; }
.category { font-size: 12px; color: #999999; margin-right: 6px; }
.icon { font-size: 16px; }
.name { font-size: 16px; font-weight: 600; color: #333333; margin-bottom: 6px; }
.props { display: flex; gap: 6px; flex-wrap: wrap; margin-bottom: 6px; }
.prop-tag { padding: 2px 8px; border-radius: 6px; font-size: 12px; }
.prop-tag.taste { background: #FFC100; color: #333; }
.prop-tag.nature { color: #fff; }
.prop-tag.nature.hot { background: #FF5E5E; }
.prop-tag.nature.warm { background: #FFC100; color: #333; }
.prop-tag.nature.cold { background: #4A90E2; }
.effects { font-size: 13px; color: #999999; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

.empty { display: flex; flex-direction: column; align-items: center; padding: 60px 20px; }
.empty-icon { font-size: 64px; margin-bottom: 16px; }
.empty-text { text-align: center; }
.empty-text .title { font-size: 18px; color: #333333; display: block; margin-bottom: 12px; }
.empty-text .desc { font-size: 14px; color: #999999; display: block; margin-bottom: 4px; }
.reset { margin-top: 12px; padding: 8px 20px; border-radius: 999px; background: #07c160; color: #fff; font-size: 14px; }

.search-panel { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 1000; }
.search-bar { display: flex; align-items: center; padding: 12px 16px; background: #FFFFFF; }
.close { width: 32px; color: #333333; font-size: 24px; }
.search-input { flex: 1; height: 40px; border-radius: 20px; background: #F5F5F5; padding: 0 16px; color: #333333; }
.search-results { padding: 12px 16px; }
.search-item { padding: 12px; margin-bottom: 8px; border-radius: 12px; background: #F5F5F5; display: flex; justify-content: space-between; }
.search-name { font-size: 16px; color: #333333; }
.search-cat { font-size: 13px; color: #999999; }
