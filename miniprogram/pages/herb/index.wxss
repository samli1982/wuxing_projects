.page { padding-bottom: 58px; color: #fff; min-height: 100vh; }
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: rgba(0,0,0,0.3); }
.nav-left { width: 44px; color: #ffffff; font-size: 18px; }
.nav-title { flex: 1; text-align: center; color: #FFFFFF; font-size: 17px; font-weight: 500; }
.nav-right { width: 44px; text-align: right; color: #ffffff; font-size: 16px; }

.motto { text-align: center; padding: 16px 20px 20px; }
.motto .line { display: block; font-family: "STKaiti", "Kaiti SC", serif; font-size: 16px; color: #E6E6E6; line-height: 28px; }
.motto .hint { margin-top: 8px; font-size: 13px; color: #3A9E8F; text-decoration: underline; }

.filters { background: rgba(255,255,255,0.04); padding: 8px 0; }
.tab-parent { white-space: nowrap; padding: 0 16px; }
.tab { display: inline-block; padding: 8px 16px; font-size: 15px; font-weight: 600; color: #BBBBBB; }
.tab.active { color: #FFFFFF; border-bottom: 3px solid #3A9E8F; }
.tab-child { white-space: nowrap; padding: 0 16px; margin-top: 8px; }
.tab-child-item { display: inline-block; padding: 6px 12px; margin-right: 8px; border-radius: 999px; background: rgba(255,255,255,0.1); font-size: 13px; color: #BBBBBB; }
.tab-child-item.active { background: #3A9E8F; color: #fff; }

.list { margin: 12px 16px; }
.card { position: relative; margin-bottom: 12px; padding: 12px; border-radius: 16px; background: rgba(255,255,255,0.06); border: 1px solid rgba(58,158,143,0.2); box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
.card:active { transform: scale(0.98); }
.collect { position: absolute; top: 8px; right: 8px; font-size: 18px; }
.card-header { display: flex; align-items: center; margin-bottom: 6px; }
.number { font-size: 12px; color: #A0A0A0; margin-right: 6px; }
.category { font-size: 12px; color: #A0A0A0; margin-right: 6px; }
.icon { font-size: 16px; }
.name { font-size: 16px; font-weight: 600; color: #FFFFFF; margin-bottom: 6px; }
.props { display: flex; gap: 6px; flex-wrap: wrap; margin-bottom: 6px; }
.prop-tag { padding: 2px 8px; border-radius: 6px; font-size: 12px; }
.prop-tag.taste { background: #F4D06F; color: #333; }
.prop-tag.nature { color: #fff; }
.prop-tag.nature.hot { background: #E63946; }
.prop-tag.nature.warm { background: #F4D06F; color: #333; }
.prop-tag.nature.cold { background: #457B9D; }
.effects { font-size: 13px; color: #BBBBBB; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

.empty { display: flex; flex-direction: column; align-items: center; padding: 60px 20px; }
.empty-icon { font-size: 64px; margin-bottom: 16px; }
.empty-text { text-align: center; }
.empty-text .title { font-size: 18px; color: #E6E6E6; display: block; margin-bottom: 12px; }
.empty-text .desc { font-size: 14px; color: #A0A0A0; display: block; margin-bottom: 4px; }
.reset { margin-top: 12px; padding: 8px 20px; border-radius: 999px; background: #3A9E8F; color: #fff; font-size: 14px; }

.search-panel { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.9); z-index: 1000; }
.search-bar { display: flex; align-items: center; padding: 12px 16px; background: rgba(255,255,255,0.1); }
.close { width: 32px; color: #fff; font-size: 24px; }
.search-input { flex: 1; height: 40px; border-radius: 20px; background: rgba(255,255,255,0.2); padding: 0 16px; color: #fff; }
.search-results { padding: 12px 16px; }
.search-item { padding: 12px; margin-bottom: 8px; border-radius: 12px; background: rgba(255,255,255,0.06); display: flex; justify-content: space-between; }
.search-name { font-size: 16px; color: #fff; }
.search-cat { font-size: 13px; color: #BBBBBB; }
