.page { padding-bottom: 20px; color: #fff; background: #1A1C29; }

/* 导航栏 */
.nav { height: 44px; display: flex; align-items: center; padding: 0 12px; background: rgba(0,0,0,0.3); }
.nav-left { width: 44px; color: #ffffff; font-size: 18px; }
.nav-title { flex: 1; text-align: center; color: #FFFFFF; font-size: 17px; font-weight: 600; letter-spacing: 1px; }
.nav-right { width: 44px; text-align: right; color: #FFFFFF; font-size: 16px; }

/* 主视觉横幅 */
.hero-banner { height: 160px; margin: 12px 16px; border-radius: 12px; overflow: hidden; }
.hero-item { 
  height: 160px; 
  background: linear-gradient(135deg, rgba(58,158,143,0.3), rgba(69,123,157,0.2));
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 12px;
  padding: 12px;
  display: flex;
  align-items: center;
  gap: 12px;
}
.hero-icon { font-size: 40px; }
.hero-content { flex: 1; }
.hero-label { font-size: 12px; color: #3A9E8F; margin-bottom: 4px; }
.hero-title { font-size: 16px; color: #FFFFFF; font-weight: 600; margin-bottom: 4px; }
.hero-desc { font-size: 12px; color: #BBBBBB; margin-bottom: 8px; line-height: 1.4; }
.hero-progress { display: flex; align-items: center; gap: 8px; }
.progress-bar { flex: 1; height: 3px; background: rgba(255,255,255,0.1); border-radius: 2px; overflow: hidden; }
.progress-fill { height: 100%; background: #3A9E8F; }
.progress-text { font-size: 11px; color: #3A9E8F; white-space: nowrap; }
.hero-play { font-size: 24px; }

/* 分类标签栏 */
.category-tabs { white-space: nowrap; padding: 12px 16px; }
.category-tab { 
  display: inline-block; 
  padding: 6px 14px; 
  border-radius: 20px;
  background: rgba(255,255,255,0.05);
  border: 1px solid rgba(255,255,255,0.1);
  color: #BBBBBB;
  font-size: 13px;
  margin-right: 8px;
  transition: all 0.3s;
}
.category-tab.active { 
  background: transparent;
  border-bottom: 3px solid #3A9E8F;
  color: #FFFFFF;
  border: none;
  border-bottom: 3px solid #3A9E8F;
}

/* 课程卡片 */
.courses-section { padding: 0 16px; }
.course-card { 
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 12px;
  padding: 12px;
  margin-bottom: 12px;
  transition: all 0.3s;
}
.course-card:active { transform: scale(0.98); }
.course-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 8px; }
.course-icon { font-size: 20px; margin-right: 8px; }
.course-meta { display: flex; align-items: center; gap: 8px; }
.course-category { font-size: 11px; background: rgba(58,158,143,0.2); color: #3A9E8F; padding: 2px 8px; border-radius: 6px; }
.course-collect { font-size: 16px; cursor: pointer; opacity: 0.5; transition: opacity 0.3s; }
.course-collect.active { opacity: 1; }
.course-title { font-size: 15px; color: #FFFFFF; font-weight: 600; margin-bottom: 6px; }
.course-info { font-size: 12px; color: #BBBBBB; margin-bottom: 8px; }
.course-progress { display: flex; align-items: center; gap: 8px; }

/* 文献卡片 */
.classics-section { padding: 16px 16px; }
.section-title { font-size: 16px; color: #FFFFFF; font-weight: 600; margin-bottom: 12px; }
.classic-card { 
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
}
.classic-name { font-size: 14px; color: #3A9E8F; font-weight: 600; margin-bottom: 8px; }
.classic-excerpt { 
  font-size: 13px; 
  color: #BBBBBB; 
  line-height: 1.6;
  font-style: italic;
  margin-bottom: 12px;
  padding: 8px 0;
  border-left: 3px solid #3A9E8F;
  padding-left: 12px;
}
.classic-footer { display: flex; gap: 12px; }
.classic-annotation, .classic-link { 
  font-size: 12px; 
  color: #3A9E8F; 
  display: flex; 
  align-items: center; 
  gap: 4px;
  cursor: pointer;
}

/* 视频卡片 */
.video-section { padding: 16px 16px; }
.video-card { 
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 12px;
  display: flex;
  gap: 12px;
}
.video-thumbnail { 
  position: relative;
  width: 90px;
  height: 90px;
  flex-shrink: 0;
}
.video-thumbnail image { width: 100%; height: 100%; object-fit: cover; }
.video-play-icon { 
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24px;
}
.video-info { padding: 12px; flex: 1; display: flex; flex-direction: column; justify-content: center; }
.video-speaker { font-size: 12px; color: #3A9E8F; margin-bottom: 4px; }
.video-title { font-size: 14px; color: #FFFFFF; font-weight: 600; margin-bottom: 6px; }
.video-meta { font-size: 11px; color: #BBBBBB; }

/* 社区问答 & 笔记 */
.community-section { padding: 16px 16px; }
.community-tabs { display: flex; gap: 20px; margin-bottom: 16px; }
.community-tab { 
  font-size: 14px; 
  color: #BBBBBB;
  padding-bottom: 8px;
  border-bottom: 2px solid transparent;
  transition: all 0.3s;
}
.community-tab.active { 
  color: #FFFFFF; 
  border-bottom-color: #3A9E8F;
}
.community-content { }

/* 问答项 */
.qa-item { 
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 12px;
  padding: 12px;
  margin-bottom: 12px;
}
.qa-question { font-size: 13px; color: #3A9E8F; font-weight: 600; margin-bottom: 6px; }
.qa-answer { font-size: 12px; color: #BBBBBB; line-height: 1.6; margin-bottom: 8px; }
.qa-actions { display: flex; gap: 12px; }
.qa-action { font-size: 12px; color: #3A9E8F; cursor: pointer; }

/* 笔记项 */
.note-item { 
  background: rgba(255,255,255,0.06);
  border: 1px solid rgba(58,158,143,0.2);
  border-radius: 12px;
  padding: 12px;
  margin-bottom: 12px;
}
.note-title { font-size: 14px; color: #FFFFFF; font-weight: 600; margin-bottom: 6px; }
.note-preview { font-size: 12px; color: #BBBBBB; line-height: 1.6; margin-bottom: 6px; }
.note-meta { font-size: 11px; color: #888888; }
